{% comment %}
  Glass Filter Sidebar
  Complete filtering interface with categories, price, availability, etc.
{% endcomment %}

<div class="glass-filter-sidebar" id="glass-filter-sidebar" data-section-id="{{ section.id }}">
  <div class="filter-sidebar-header">
    <h3 class="filter-sidebar-title">Filters</h3>
    <button class="filter-sidebar-close" onclick="closeFilterSidebar()" aria-label="Close filters">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
      </svg>
    </button>
  </div>
  
  <div class="filter-sidebar-content">
    
    <!-- Product Type Filter -->
    {% if section.settings.show_product_type %}
    <div class="filter-section">
      <button class="filter-section-toggle" onclick="toggleFilterSection(this)" aria-expanded="false">
        <span class="filter-section-title">Product Type</span>
        <svg class="filter-section-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
        </svg>
      </button>
      <div class="filter-section-content">
        <div class="filter-options">
          {% for product_type in collections.all.all_types %}
            {% if product_type != blank %}
              <label class="filter-option">
                <input type="checkbox" name="product_type" value="{{ product_type | handle }}" onchange="handleFilterChange(this)">
                <span class="filter-option-checkmark"></span>
                <span class="filter-option-label">{{ product_type }}</span>
                <span class="filter-option-count">({{ collections.all.products | where: 'type', product_type | size }})</span>
              </label>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    {% endif %}
    
    <!-- Game System Filter -->
    {% if section.settings.show_game_system %}
    <div class="filter-section">
      <button class="filter-section-toggle" onclick="toggleFilterSection(this)" aria-expanded="false">
        <span class="filter-section-title">Game System</span>
        <svg class="filter-section-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
        </svg>
      </button>
      <div class="filter-section-content">
        <div class="filter-options">
          <label class="filter-option">
            <input type="checkbox" name="game_system" value="cthulhu-wars" onchange="handleFilterChange(this)">
            <span class="filter-option-checkmark"></span>
            <span class="filter-option-label">Cthulhu Wars</span>
            <span class="filter-option-count">({{ collections['cthulhu-wars'].products_count }})</span>
          </label>
          <label class="filter-option">
            <input type="checkbox" name="game_system" value="planet-apocalypse" onchange="handleFilterChange(this)">
            <span class="filter-option-checkmark"></span>
            <span class="filter-option-label">Planet Apocalypse</span>
            <span class="filter-option-count">({{ collections['planet-apocalypse'].products_count }})</span>
          </label>
          <label class="filter-option">
            <input type="checkbox" name="game_system" value="evil-high-priest" onchange="handleFilterChange(this)">
            <span class="filter-option-checkmark"></span>
            <span class="filter-option-label">Evil High Priest</span>
            <span class="filter-option-count">({{ collections['evil-high-priest'].products_count }})</span>
          </label>
          <label class="filter-option">
            <input type="checkbox" name="game_system" value="orcs-must-die" onchange="handleFilterChange(this)">
            <span class="filter-option-checkmark"></span>
            <span class="filter-option-label">Orcs Must Die!</span>
            <span class="filter-option-count">({{ collections['orcs-must-die'].products_count }})</span>
          </label>
        </div>
      </div>
    </div>
    {% endif %}
    
    <!-- Price Filter -->
    {% if section.settings.show_price_filter %}
    <div class="filter-section">
      <button class="filter-section-toggle" onclick="toggleFilterSection(this)" aria-expanded="true">
        <span class="filter-section-title">Price</span>
        <svg class="filter-section-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
        </svg>
      </button>
      <div class="filter-section-content active">
        <div class="price-range-container">
          <div class="price-inputs">
            <div class="price-input-group">
              <label class="price-input-label">From</label>
              <input type="number" class="price-input" id="price-from" placeholder="0" min="0" onchange="handlePriceChange()">
            </div>
            <div class="price-input-group">
              <label class="price-input-label">To</label>
              <input type="number" class="price-input" id="price-to" placeholder="500" min="0" onchange="handlePriceChange()">
            </div>
          </div>
          <div class="price-range-slider">
            <input type="range" class="price-range" id="price-range-min" min="0" max="500" value="0" oninput="updatePriceRange()">
            <input type="range" class="price-range" id="price-range-max" min="0" max="500" value="500" oninput="updatePriceRange()">
          </div>
        </div>
        <div class="filter-options">
          <label class="filter-option">
            <input type="checkbox" name="price_range" value="0-50" onchange="handleFilterChange(this)">
            <span class="filter-option-checkmark"></span>
            <span class="filter-option-label">Under $50</span>
          </label>
          <label class="filter-option">
            <input type="checkbox" name="price_range" value="50-100" onchange="handleFilterChange(this)">
            <span class="filter-option-checkmark"></span>
            <span class="filter-option-label">$50 - $100</span>
          </label>
          <label class="filter-option">
            <input type="checkbox" name="price_range" value="100-200" onchange="handleFilterChange(this)">
            <span class="filter-option-checkmark"></span>
            <span class="filter-option-label">$100 - $200</span>
          </label>
          <label class="filter-option">
            <input type="checkbox" name="price_range" value="200-999" onchange="handleFilterChange(this)">
            <span class="filter-option-checkmark"></span>
            <span class="filter-option-label">$200+</span>
          </label>
        </div>
      </div>
    </div>
    {% endif %}
    
    <!-- Availability Filter -->
    {% if section.settings.show_availability %}
    <div class="filter-section">
      <button class="filter-section-toggle" onclick="toggleFilterSection(this)" aria-expanded="false">
        <span class="filter-section-title">Availability</span>
        <svg class="filter-section-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
        </svg>
      </button>
      <div class="filter-section-content">
        <div class="filter-options">
          <label class="filter-option">
            <input type="checkbox" name="availability" value="in-stock" onchange="handleFilterChange(this)">
            <span class="filter-option-checkmark"></span>
            <span class="filter-option-label">In Stock</span>
          </label>
          <label class="filter-option">
            <input type="checkbox" name="availability" value="pre-order" onchange="handleFilterChange(this)">
            <span class="filter-option-checkmark"></span>
            <span class="filter-option-label">Pre-Order</span>
          </label>
          <label class="filter-option">
            <input type="checkbox" name="availability" value="out-of-stock" onchange="handleFilterChange(this)">
            <span class="filter-option-checkmark"></span>
            <span class="filter-option-label">Out of Stock</span>
          </label>
        </div>
      </div>
    </div>
    {% endif %}
    
    <!-- Tags Filter -->
    {% if section.settings.show_tags %}
    <div class="filter-section">
      <button class="filter-section-toggle" onclick="toggleFilterSection(this)" aria-expanded="false">
        <span class="filter-section-title">Features</span>
        <svg class="filter-section-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
        </svg>
      </button>
      <div class="filter-section-content">
        <div class="filter-options">
          {% assign common_tags = 'miniatures,expansion,dice,cards,board,strategy,horror,cosmic' | split: ',' %}
          {% for tag in common_tags %}
            <label class="filter-option">
              <input type="checkbox" name="tags" value="{{ tag }}" onchange="handleFilterChange(this)">
              <span class="filter-option-checkmark"></span>
              <span class="filter-option-label">{{ tag | capitalize }}</span>
            </label>
          {% endfor %}
        </div>
      </div>
    </div>
    {% endif %}
    
  </div>
  
  <!-- Filter Actions -->
  <div class="filter-sidebar-actions">
    <button class="filter-action-button secondary" onclick="clearAllFilters()">
      Clear All
    </button>
    <button class="filter-action-button primary" onclick="applyFilters()">
      Apply Filters
    </button>
  </div>
</div>

<!-- Filter Overlay (for mobile) -->
<div class="filter-overlay" id="filter-overlay" onclick="closeFilterSidebar()"></div>

