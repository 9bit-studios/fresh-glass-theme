<script>
// Filter Sidebar Functionality

function toggleFilterSection(button) {
  const isExpanded = button.getAttribute('aria-expanded') === 'true';
  const content = button.nextElementSibling;
  
  button.setAttribute('aria-expanded', !isExpanded);
  
  if (isExpanded) {
    content.classList.remove('active');
  } else {
    content.classList.add('active');
  }
}

function handleFilterChange(checkbox) {
  const name = checkbox.name;
  const value = checkbox.value;
  const isChecked = checkbox.checked;
  
  console.log(`Filter changed: ${name} = ${value}, checked: ${isChecked}`);
  
  if (isChecked) {
    addFilterToBar(name, value, getFilterLabel(checkbox));
  } else {
    removeFilterFromBar(name, value);
  }
  
  updateFilters();
}

function getFilterLabel(checkbox) {
  const option = checkbox.closest('.filter-option');
  const label = option.querySelector('.filter-option-label');
  return label ? label.textContent.trim() : checkbox.value;
}

function addFilterToBar(name, value, label) {
  // Add filter tag to the filter bar
  if (typeof addFilterTag === 'function') {
    addFilterTag(label, `${name}:${value}`, () => removeFilter(name, value));
  }
}

function removeFilterFromBar(name, value) {
  // Remove filter tag from the filter bar
  const filterTags = document.querySelectorAll('.filter-tag');
  filterTags.forEach(tag => {
    if (tag.textContent.includes(value)) {
      tag.remove();
    }
  });
}

function handlePriceChange() {
  const priceFrom = document.getElementById('price-from').value;
  const priceTo = document.getElementById('price-to').value;
  
  console.log(`Price range changed: ${priceFrom} - ${priceTo}`);
  
  // Update price range sliders
  if (priceFrom) {
    document.getElementById('price-range-min').value = priceFrom;
  }
  if (priceTo) {
    document.getElementById('price-range-max').value = priceTo;
  }
  
  updateFilters();
}

function updatePriceRange() {
  const rangeMin = document.getElementById('price-range-min');
  const rangeMax = document.getElementById('price-range-max');
  const inputMin = document.getElementById('price-from');
  const inputMax = document.getElementById('price-to');
  
  if (rangeMin && rangeMax && inputMin && inputMax) {
    inputMin.value = rangeMin.value;
    inputMax.value = rangeMax.value;
    
    handlePriceChange();
  }
}

function updateFilters() {
  // Collect all active filters
  const activeFilters = collectActiveFilters();
  
  console.log('Active filters:', activeFilters);
  
  // Apply filters to product display
  applyFiltersToProducts(activeFilters);
  
  // Update URL parameters
  updateURLParameters(activeFilters);
  
  // Update results count
  updateResultsDisplay();
}

function collectActiveFilters() {
  const filters = {};
  
  // Collect checkbox filters
  const checkboxes = document.querySelectorAll('.filter-option input[type="checkbox"]:checked');
  checkboxes.forEach(checkbox => {
    const name = checkbox.name;
    const value = checkbox.value;
    
    if (!filters[name]) {
      filters[name] = [];
    }
    filters[name].push(value);
  });
  
  // Collect price range
  const priceFrom = document.getElementById('price-from')?.value;
  const priceTo = document.getElementById('price-to')?.value;
  
  if (priceFrom || priceTo) {
    filters.price = {
      min: priceFrom || 0,
      max: priceTo || 999999
    };
  }
  
  return filters;
}

function applyFiltersToProducts(filters) {
  // This would integrate with Shopify's filtering system
  // For now, we'll log the filters that would be applied
  console.log('Applying filters to products:', filters);
  
  // TODO: Implement actual product filtering logic
  // This might involve AJAX requests to Shopify's filter endpoints
  // or client-side filtering of visible products
}

function updateURLParameters(filters) {
  const url = new URL(window.location);
  
  // Clear existing filter parameters
  const params = new URLSearchParams(url.search);
  Array.from(params.keys()).forEach(key => {
    if (key.startsWith('filter.')) {
      params.delete(key);
    }
  });
  
  // Add new filter parameters
  Object.keys(filters).forEach(filterName => {
    const filterValues = filters[filterName];
    
    if (Array.isArray(filterValues)) {
      filterValues.forEach(value => {
        params.append(`filter.${filterName}`, value);
      });
    } else if (typeof filterValues === 'object') {
      // Handle price range
      if (filterValues.min) params.set('filter.price.gte', filterValues.min);
      if (filterValues.max) params.set('filter.price.lte', filterValues.max);
    }
  });
  
  // Update URL without reload
  window.history.replaceState({}, '', `${url.pathname}?${params.toString()}`);
}

function updateResultsDisplay() {
  // Update the results count in the filter bar
  // This would typically come from the server response
  const mockResultsCount = Math.floor(Math.random() * 50) + 10;
  
  if (typeof updateResultsCount === 'function') {
    updateResultsCount(mockResultsCount);
  }
}

function clearAllFilters() {
  console.log('Clearing all filters');
  
  // Uncheck all checkboxes
  const checkboxes = document.querySelectorAll('.filter-option input[type="checkbox"]:checked');
  checkboxes.forEach(checkbox => {
    checkbox.checked = false;
  });
  
  // Reset price inputs
  const priceInputs = document.querySelectorAll('.price-input');
  priceInputs.forEach(input => {
    input.value = '';
  });
  
  // Reset price sliders
  const priceRanges = document.querySelectorAll('.price-range');
  priceRanges.forEach((range, index) => {
    range.value = index === 0 ? 0 : 500;
  });
  
  // Clear filter bar
  if (typeof clearAllFilters === 'function') {
    clearAllFilters();
  }
  
  // Update display
  updateFilters();
}

function applyFilters() {
  console.log('Applying filters - reloading page with current filters');
  
  // Force update filters and reload
  updateFilters();
  
  // Close sidebar on mobile
  if (window.innerWidth <= 768) {
    closeFilterSidebar();
  }
  
  // Reload page with new parameters
  setTimeout(() => {
    window.location.reload();
  }, 500);
}

function closeFilterSidebar() {
  const sidebar = document.getElementById('glass-filter-sidebar');
  const overlay = document.getElementById('filter-overlay');
  
  if (sidebar) {
    sidebar.classList.remove('active');
  }
  
  if (overlay) {
    overlay.classList.remove('active');
  }
  
  document.body.classList.remove('filter-sidebar-open');
}

function openFilterSidebar() {
  const sidebar = document.getElementById('glass-filter-sidebar');
  const overlay = document.getElementById('filter-overlay');
  
  if (sidebar) {
    sidebar.classList.add('active');
  }
  
  if (overlay) {
    overlay.classList.add('active');
  }
  
  document.body.classList.add('filter-sidebar-open');
}

// Initialize filters on page load
document.addEventListener('DOMContentLoaded', function() {
  // Parse URL parameters and set initial filter state
  const urlParams = new URLSearchParams(window.location.search);
  
  urlParams.forEach((value, key) => {
    if (key.startsWith('filter.')) {
      const filterName = key.replace('filter.', '');
      const checkbox = document.querySelector(`input[name="${filterName}"][value="${value}"]`);
      
      if (checkbox) {
        checkbox.checked = true;
        handleFilterChange(checkbox);
      }
    }
  });
  
  // Set up mobile filter toggle integration
  if (typeof toggleMobileFilters === 'function') {
    const originalToggle = window.toggleMobileFilters;
    window.toggleMobileFilters = function() {
      const sidebar = document.getElementById('glass-filter-sidebar');
      if (sidebar.classList.contains('active')) {
        closeFilterSidebar();
      } else {
        openFilterSidebar();
      }
    };
  }
  
  // Ensure only Price section is expanded on page load
  const allSections = document.querySelectorAll('.filter-section');
  allSections.forEach(section => {
    const toggle = section.querySelector('.filter-section-toggle');
    const content = section.querySelector('.filter-section-content');
    const title = section.querySelector('.filter-section-title');
    
    if (title && title.textContent.trim() === 'Price') {
      // Keep Price section expanded
      toggle.setAttribute('aria-expanded', 'true');
      content.classList.add('active');
    } else {
      // Collapse all other sections
      toggle.setAttribute('aria-expanded', 'false');
      content.classList.remove('active');
    }
  });
});

// Export functions for global access
window.openFilterSidebar = openFilterSidebar;
window.closeFilterSidebar = closeFilterSidebar;
window.toggleFilterSection = toggleFilterSection;
window.handleFilterChange = handleFilterChange;
window.handlePriceChange = handlePriceChange;
window.updatePriceRange = updatePriceRange;
window.clearAllFilters = clearAllFilters;
window.applyFilters = applyFilters;
</script>

