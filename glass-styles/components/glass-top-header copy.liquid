{% comment %}
  Glass Top Header - With Search Modal
  Main header component with logo, navigation, search, and cart
{% endcomment %}

<header class="glass-top-header">
  <div class="glass-header-container">
    
    <!-- Logo Section -->
    <div class="glass-logo-section">
      <a href="{{ routes.root_url }}" class="glass-logo-link">
        {% if section.settings.logo %}
          <img src="{{ section.settings.logo | image_url: width: 180 }}" 
               alt="{{ shop.name }}" 
               class="glass-logo-image"
               width="180" 
               height="36">
        {% else %}
          <span class="glass-logo-text">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    <!-- Center Navigation Menu -->
    <nav class="glass-menu-nav">
