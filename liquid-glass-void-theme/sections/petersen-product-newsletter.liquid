    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Download FREE STL"
    },
    {
      "type": "url",
      "id": "custom_icon_url",
      "label": "Custom button icon URL (optional)",
      "info": "Use a Petersen Games glyph or custom icon"
    },
    {
      "type": "header",
      "content": "Privacy & Benefits"
    },
    {
      "type": "checkbox",
      "id": "show_privacy_note",
      "label": "Show privacy note",
      "default": true
    },
    {
      "type": "text",
      "id": "privacy_text",
      "label": "Privacy note text",
      "default": "We respect your privacy. Unsubscribe anytime."
    },
    {
      "type": "checkbox",
      "id": "show_benefits",
      "label": "Show benefits list",
      "default": true
    },
    {
      "type": "text",
      "id": "benefit_1",
      "label": "Benefit 1",
      "default": "Early access to new releases"
    },
    {
      "type": "text",
      "id": "benefit_2",
      "label": "Benefit 2",
      "default": "Exclusive insider content"
    },
    {
      "type": "text",
      "id": "benefit_3",
      "label": "Benefit 3",
      "default": "Special member discounts"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top margin",
      "default": 40
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom margin",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "FREE STL Newsletter",
      "settings": {
        "show_title": true,
        "title": "Get Your FREE STL File",
        "show_free_badge": true,
        "show_benefits": true,
        "show_privacy_note": true,
        "benefit_1": "Early access to new releases",
        "benefit_2": "Exclusive insider content",
