{{ 'framer-inspired-theme.css' | asset_url | stylesheet_tag }}

{% comment %}
  Framer-inspired Hero Section
  Matches the exact design from framer-inspired-homepage.html
{% endcomment %}

<section class="hero">
  <div class="hero-container">
    <div class="hero-content">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      
      <div class="hero-actions">
        {% if section.settings.button_primary_text != blank %}
          <a href="{{ section.settings.button_primary_url }}" class="btn-primary">
            {{ section.settings.button_primary_text }}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M9 18l6-6-6-6"/>
            </svg>
          </a>
        {% endif %}
        
        {% if section.settings.button_secondary_text != blank %}
          <a href="{{ section.settings.button_secondary_url }}" class="btn-secondary">
            {{ section.settings.button_secondary_text }}
          </a>
        {% endif %}
      </div>
    </div>
    
    <div class="hero-image">
      {% if section.settings.hero_image != blank %}
        {{ section.settings.hero_image | image_url: width: 600, height: 600 | image_tag: 
           alt: section.settings.hero_image_alt,
           loading: 'lazy',
           width: 600,
           height: 600 }}
      {% else %}
        <img src="https://images.unsplash.com/photo-1606092195730-5d7b9af1efc5?w=600&h=600&fit=crop&crop=center" 
             alt="Cthulhu Wars miniatures" 
             loading="lazy" 
             width="600" 
             height="600" />
      {% endif %}
    </div>
  </div>
</section>

<style>
  /* Section-specific hero styles */
  .hero {
    padding: var(--space-20, 80px) 0 var(--space-16, 64px) 0;
    background: radial-gradient(ellipse at center, rgba(99, 102, 241, 0.1) 0%, transparent 50%);
  }
  
  .hero-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 var(--space-6, 24px);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16, 64px);
    align-items: center;
  }
  
  .hero-content h1 {
    font-size: clamp(32px, 5vw, 56px);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-6, 24px);
    background: linear-gradient(135deg, #FFFFFF 0%, rgba(255, 255, 255, 0.7) 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .hero-content p {
    font-size: 18px;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--space-8, 32px);
    line-height: 1.6;
  }
  
  .hero-actions {
    display: flex;
    gap: var(--space-4, 16px);
    align-items: center;
  }
  
  .btn-primary {
    padding: var(--space-3, 12px) var(--space-6, 24px);
    background: #6366F1;
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: var(--space-2, 8px);
  }
  
  .btn-primary:hover {
    background: #5048E5;
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
  }
  
  .btn-secondary {
    padding: var(--space-3, 12px) var(--space-6, 24px);
    background: rgba(255, 255, 255, 0.04);
    color: #FFFFFF;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    backdrop-filter: blur(8px);
  }
  
  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateY(-1px);
  }
  
  .hero-image {
    position: relative;
    aspect-ratio: 1;
    border-radius: 20px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }
  
  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: var(--space-12, 48px);
      text-align: center;
    }
    
    .hero {
      padding: var(--space-12, 48px) 0;
    }
    
    .hero-actions {
      flex-direction: column;
      width: 100%;
    }
    
    .btn-primary,
    .btn-secondary {
      width: 100%;
      justify-content: center;
    }
  }
</style>

{% schema %}
{
  "name": "Framer Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Legendary horror. Strategic mastery.",
      "label": "Hero heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "default": "From the Creator of Call of Cthulhu RPG - Sandy Petersen's premium tabletop games featuring hundreds of hand-sculpted miniatures and asymmetric gameplay.",
      "label": "Hero subheading"
    },
    {
      "type": "text",
      "id": "button_primary_text",
      "default": "Explore Collection",
      "label": "Primary button text"
    },
    {
      "type": "url",
      "id": "button_primary_url",
      "default": "/collections/all",
      "label": "Primary button URL"
    },
    {
      "type": "text",
      "id": "button_secondary_text",
      "default": "View Catalog",
      "label": "Secondary button text"
    },
    {
      "type": "url",
      "id": "button_secondary_url",
      "default": "/collections",
      "label": "Secondary button URL"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "hero_image_alt",
      "default": "Cthulhu Wars miniatures showcase",
      "label": "Hero image alt text"
    }
  ],
  "presets": [
    {
      "name": "Framer Hero"
    }
  ]
}
{% endschema %}