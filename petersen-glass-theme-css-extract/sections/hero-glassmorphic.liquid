{{ 'hero-glassmorphic.css' | asset_url | stylesheet_tag }}
<div class="hero-glassmorphic" style="min-height: {{ section.settings.mobile_height | default: '60vh' }};">
  <div class="hero-background">
    {% if section.settings.background_image %}
      <img src="{{ section.settings.background_image | img_url: '2048x' }}" alt="" class="hero-bg-image">
    {% endif %}
    <div class="hero-overlay"></div>
  </div>
  
  <div class="hero-content glass-container">
    <div class="hero-text">
      <h1 class="hero-heading">{{ section.settings.heading | default: 'Legendary horror. Strategic mastery.' }}</h1>
      <p class="hero-subheading">{{ section.settings.subheading | default: 'From the mind of Sandy Petersen' }}</p>
      <a href="{{ section.settings.button_url | default: '/collections/all' }}" class="btn-primary glass-button">
        {{ section.settings.button_text | default: 'Shop all games' }}
      </a>
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Hero Glassmorphic",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Legendary horror. Strategic mastery."
    },
    {
      "type": "text", 
      "id": "subheading",
      "label": "Subheading",
      "default": "From the mind of Sandy Petersen"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop all games"
    },
    {
      "type": "url",
      "id": "button_url", 
      "label": "Button URL",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "mobile_height",
      "label": "Mobile Height",
      "default": "60vh"
    }
  ]
}
{% endschema %}
