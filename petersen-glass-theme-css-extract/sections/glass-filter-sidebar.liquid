{% comment %}
  Glass Filter Sidebar - Integrated with Shopify Facets
  Connected to facets.js system with glass morphic styling
{% endcomment %}

{{ 'glass-filter-sidebar.css' | asset_url | stylesheet_tag }}
<aside class="glass-filter-sidebar" id="glass-filter-sidebar">
  <div class="glass-filter-sidebar-content">
    
    <div class="filter-sidebar-header">
      <h3 class="filter-sidebar-title">Filters</h3>
      <button class="filter-sidebar-close" onclick="closeGlassFilters()" aria-label="Close filters">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
        </svg>
      </button>
    </div>

    <facets-form-component section-id="{{ section.id }}">
      <form class="facets__form" id="facets-form-{{ section.id }}">
        
        {% if section.settings.show_product_type and collections.all.all_types.size > 0 %}
        <details class="filter-section" open>
          <summary class="filter-section-toggle">
            <span class="filter-section-title">Product Type</span>
            <facet-status-component>
              <span class="facet-status"></span>
            </facet-status-component>
            <svg class="filter-section-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
            </svg>
          </summary>
          
          <div class="filter-section-content">
            <facet-inputs-component>
              <div class="filter-options">
                {% for product_type in collections.all.all_types limit: 10 %}
                  {% if product_type != blank %}
                    <label class="filter-option">
                      <input type="checkbox" 
                             name="filter.p.product_type" 
                             value="{{ product_type | handle }}"
                             data-label="{{ product_type }}"
                             {% if current_tags contains product_type %}checked{% endif %}>
                      <span class="filter-option-checkmark"></span>
                      <span class="filter-option-label">{{ product_type }}</span>
                      <span class="filter-option-count">({{ collections.all.products | where: 'type', product_type | size }})</span>
                    </label>
                  {% endif %}
                {% endfor %}
              </div>
            </facet-inputs-component>
          </div>
        </details>
        {% endif %}

        {% if section.settings.show_vendor and collections.all.all_vendors.size > 0 %}
        <details class="filter-section">
          <summary class="filter-section-toggle">
            <span class="filter-section-title">Brand</span>
            <facet-status-component>
              <span class="facet-status"></span>
            </facet-status-component>
            <svg class="filter-section-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
            </svg>
          </summary>
          
          <div class="filter-section-content">
            <facet-inputs-component>
              <div class="filter-options">
                {% for vendor in collections.all.all_vendors limit: 10 %}
                  {% if vendor != blank %}
                    <label class="filter-option">
                      <input type="checkbox" 
                             name="filter.p.vendor" 
                             value="{{ vendor | handle }}"
                             data-label="{{ vendor }}">
                      <span class="filter-option-checkmark"></span>
                      <span class="filter-option-label">{{ vendor }}</span>
                      <span class="filter-option-count">({{ collections.all.products | where: 'vendor', vendor | size }})</span>
                    </label>
                  {% endif %}
                {% endfor %}
              </div>
            </facet-inputs-component>
          </div>
        </details>
        {% endif %}

        {% if section.settings.show_price_filter %}
        <details class="filter-section">
          <summary class="filter-section-toggle">
            <span class="filter-section-title">Price</span>
            <facet-status-component>
              <span class="facet-status"></span>
            </facet-status-component>
            <svg class="filter-section-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
            </svg>
          </summary>
          
          <div class="filter-section-content">
            <price-facet-component>
              <div class="price-range-container">
                <div class="price-inputs">
                  <div class="price-input-group">
                    <label class="price-input-label">From</label>
                    <input type="number" 
                           class="price-input" 
                           name="filter.v.price.gte" 
                           placeholder="0" 
                           min="0"
                           data-min="0"
                           data-max="1000">
                  </div>
                  <div class="price-input-group">
                    <label class="price-input-label">To</label>
                    <input type="number" 
                           class="price-input" 
                           name="filter.v.price.lte" 
                           placeholder="1000" 
                           min="0"
                           data-min="0"
                           data-max="1000">
                  </div>
                </div>
              </div>
            </price-facet-component>
          </div>
        </details>
        {% endif %}

        {% if section.settings.show_availability %}
        <details class="filter-section">
          <summary class="filter-section-toggle">
            <span class="filter-section-title">Availability</span>
            <facet-status-component>
              <span class="facet-status"></span>
            </facet-status-component>
            <svg class="filter-section-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
            </svg>
          </summary>
          
          <div class="filter-section-content">
            <facet-inputs-component>
              <div class="filter-options">
                <label class="filter-option">
                  <input type="checkbox" 
                         name="filter.v.availability" 
                         value="1"
                         data-label="In Stock">
                  <span class="filter-option-checkmark"></span>
                  <span class="filter-option-label">In Stock</span>
                </label>
                <label class="filter-option">
                  <input type="checkbox" 
                         name="filter.v.availability" 
                         value="0"
                         data-label="Out of Stock">
                  <span class="filter-option-checkmark"></span>
                  <span class="filter-option-label">Out of Stock</span>
                </label>
              </div>
            </facet-inputs-component>
          </div>
        </details>
        {% endif %}

        {% if section.settings.show_tags %}
        <details class="filter-section">
          <summary class="filter-section-toggle">
            <span class="filter-section-title">Features</span>
            <facet-status-component>
              <span class="facet-status"></span>
            </facet-status-component>
            <svg class="filter-section-arrow" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
            </svg>
          </summary>
          
          <div class="filter-section-content">
            <facet-inputs-component>
              <div class="filter-options">
                {% assign common_tags = 'miniatures,expansion,dice,cards,board,strategy,horror,cosmic,limited-edition,pre-order' | split: ',' %}
                {% for tag in common_tags %}
                  <label class="filter-option">
                    <input type="checkbox" 
                           name="filter.p.tag" 
                           value="{{ tag }}"
                           data-label="{{ tag | capitalize }}">
                    <span class="filter-option-checkmark"></span>
                    <span class="filter-option-label">{{ tag | capitalize }}</span>
                  </label>
                {% endfor %}
              </div>
            </facet-inputs-component>
          </div>
        </details>
        {% endif %}

      </form>
    </facets-form-component>

    <div class="filter-sidebar-actions">
      <facet-clear-component>
        <button class="filter-action-button secondary clear-button" type="button">
          Clear All
        </button>
      </facet-clear-component>
      <button class="filter-action-button primary" onclick="closeGlassFilters()">
        Apply Filters
      </button>
    </div>

  </div>
</aside>

<div class="glass-filter-overlay" id="glass-filter-overlay" onclick="closeGlassFilters()"></div>



<script>
// Glass Filter Sidebar Integration with Facets.js
function openGlassFilters() {
  const sidebar = document.getElementById('glass-filter-sidebar');
  const overlay = document.getElementById('glass-filter-overlay');
  
  if (sidebar) {
    sidebar.classList.add('active');
  }
  
  if (overlay) {
    overlay.classList.add('active');
  }
  
  document.body.classList.add('filter-sidebar-open');
  document.body.style.overflow = 'hidden';
}

function closeGlassFilters() {
  const sidebar = document.getElementById('glass-filter-sidebar');
  const overlay = document.getElementById('glass-filter-overlay');
  
  if (sidebar) {
    sidebar.classList.remove('active');
  }
  
  if (overlay) {
    overlay.classList.remove('active');
  }
  
  document.body.classList.remove('filter-sidebar-open');
  document.body.style.overflow = 'auto';
}

// Integration with Facets Components
document.addEventListener('DOMContentLoaded', function() {
  // Connect facet inputs to change events
  const facetInputs = document.querySelectorAll('facet-inputs-component input');
  facetInputs.forEach(input => {
    input.addEventListener('change', function() {
      // The facets.js system handles the actual filtering
      console.log('Filter changed:', this.name, this.value, this.checked);
    });
  });

  // Connect price inputs
  const priceInputs = document.querySelectorAll('price-facet-component input');
  priceInputs.forEach(input => {
    input.addEventListener('change', function() {
      console.log('Price filter changed:', this.name, this.value);
    });
  });

  // Connect clear button
  const clearButton = document.querySelector('facet-clear-component .clear-button');
  if (clearButton) {
    clearButton.addEventListener('click', function() {
      console.log('Clear all filters');
    });
  }
});

// Export functions for global access
window.openGlassFilters = openGlassFilters;
window.closeGlassFilters = closeGlassFilters;
</script>

{% schema %}
{
  "name": "Glass Filter Sidebar",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Filter Options"
    },
    {
      "type": "checkbox",
      "id": "show_product_type",
      "label": "Show product type filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show brand filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_price_filter",
      "label": "Show price filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_availability",
      "label": "Show availability filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show tags/features filter",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Glass Filter Sidebar"
    }
  ]
}
{% endschema %}