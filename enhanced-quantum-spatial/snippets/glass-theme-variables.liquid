  /* Override Section Width Constraints */
.section--full-width {
  grid-template-columns: 1fr !important;
}

.section--full-width > * {
  grid-column: 1 / -1 !important;
}

/* Override the nested content wrappers for full-width */
.section--full-width .custom-section-content,
.section--full-width .section-content-wrapper {
  width: 100% !important;
  max-width: none !important;
  margin: 0 !important;
  padding: 0 !important;
}

/* Allow content inside full-width sections to have proper margins */
.section--full-width .section-content-wrapper > * {
  max-width: 1800px;
  margin: 0 auto;
  padding-left: 0;
  padding-right: 0;
}
  /* Glass Header Styling for Standard Header */
  .header-section,
  .header {
    width: 100% !important;
    max-width: none !important;
    position: sticky !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    z-index: var(--glass-top-header-z-index) !important;
    background: var(--glass-top-header-background) !important;
    backdrop-filter: var(--glass-top-header-backdrop-filter) !important;
    -webkit-backdrop-filter: var(--glass-top-header-backdrop-filter) !important;
    border-bottom: var(--glass-border) !important;
  }

  .header__row {
    background: var(--glass-top-header-background) !important;
    backdrop-filter: var(--glass-top-header-backdrop-filter) !important;
    -webkit-backdrop-filter: var(--glass-top-header-backdrop-filter) !important;
    border-bottom: var(--glass-border) !important;
  }

  .header__columns {
    max-width: var(--glass-top-header-max-width) !important;
    margin: 0 auto !important;
    padding-left: var(--page-width-margin) !important;
    padding-right: var(--page-width-margin) !important;
  }

  /* Logo Section Styling */
  .header-logo,
  .header-logo__link {
    position: relative !important;
    z-index: 1002 !important;
    display: flex !important;
    align-items: center !important;
  }

  .header-logo__image {
    max-height: 60px !important;
    width: auto !important;
    height: auto !important;
    object-fit: contain !important;
  }

  .header-logo__text {
    color: var(--foundation-text-primary) !important;
    font-size: 1.5rem !important;
    font-weight: 600 !important;
  }

  /* Full-width elements override */
  .section--full-width,
  .section--full-width-margin,
  .hero,
  .hero-section {
    margin-left: 0 !important;
    margin-right: 0 !important;
    width: 100% !important;
    max-width: none !important;
  }

  /* Override body page-width constraints */
  .page-width-narrow,
  .page-width-normal,
  .page-width-wide {
    width: 100% !important;
    max-width: none !important;
    margin: 0 !important;
    padding: 0 !important;
  }

  /* Headers and footers should be full-width with centered content */
  .header-section,
  .header,
  .footer,
  .shopify-section-group-footer-group {
    width: 100% !important;
    max-width: none !important;
    margin: 0 !important;
  }

  /* Content containers get max-width */
  .header__columns,
  .footer__content,
  .main-content > .shopify-section:not(.section--full-width) .section {
    max-width: 1800px !important;
    margin: 0 auto !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
  }


  /* Product content slightly narrower */
  .product-form,
  .product-info,
  .collection-grid,
  .product-grid {
    max-width: 1600px !important;
    margin: 0 auto !important;
  }

  /* Sliding Navigation Tabs Section */
  .sliding-nav-section {
    width: 100% !important;
    max-width: none !important;
    background: var(--glass-surface) !important;
    backdrop-filter: var(--glass-effect) !important;
    -webkit-backdrop-filter: var(--glass-effect) !important;
    border-bottom: var(--glass-border) !important;
    padding: .5rem 0 !important;
    margin: 0 !important;
  }

  .sliding-nav-container {
    max-width: var(--glass-top-header-max-width) !important;
    margin: 0 auto !important;
    padding: 0 var(--page-width-margin) !important;
  }

  /* Glass Effect Utility Classes */
  .glass-surface {
    background: var(--glass-surface);
    backdrop-filter: var(--glass-effect);
    -webkit-backdrop-filter: var(--glass-effect);
    border: 0.5px solid var(--glass-border);
  }
  
  .glass-subtle {
    background: var(--glass-subtle);
    backdrop-filter: var(--foundation-backdrop-filter-subtle);
    -webkit-backdrop-filter: var(--foundation-backdrop-filter-subtle);
    border: 0.5px solid var(--glass-border);
  }
  
  .glass-medium {
    background: var(--glass-medium);
    backdrop-filter: var(--foundation-backdrop-filter-medium);
    -webkit-backdrop-filter: var(--foundation-backdrop-filter-medium);
    border: 1px solid var(--glass-border);
  }
  
  .glass-prominent {
    background: var(--glass-prominent);
    backdrop-filter: var(--foundation-backdrop-filter-prominent);
    -webkit-backdrop-filter: var(--foundation-backdrop-filter-prominent);
    border: 1px solid var(--glass-border);
    box-shadow: var(--foundation-shadow-elevated);
  }

  /* Foundation Button Styles */
  .foundation-button-primary {
    background: var(--foundation-action-primary);
    color: #ffffff;
    border: 1px solid var(--foundation-action-primary);
    border-radius: var(--foundation-radius-lg);
    padding: 8px var(--foundation-space-md);
    min-height: var(--foundation-touch-target);
    font-family: var(--foundation-font-family);
    font-weight: 500;
    transition: var(--foundation-transition);
    box-shadow: var(--foundation-shadow-primary);
  }
  
  .foundation-button-primary:hover {
    background: var(--foundation-action-hover);
    border-color: var(--foundation-action-hover);
    transform: translateY(-1px);
  }
  
  .foundation-button-secondary {
    background: var(--glass-subtle);
    color: var(--foundation-text-primary);
    border: 1px solid var(--glass-border);
    border-radius: var(--foundation-radius-lg);
    padding: 8px var(--foundation-space-md);
    min-height: var(--foundation-touch-target);
    font-family: var(--foundation-font-family);
    font-weight: 400;
    transition: var(--foundation-transition);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    box-shadow: inset 0 1px 0 var(--glass-border);
  }
  
  .foundation-button-secondary:hover {
    background: var(--glass-medium);
    border-color: var(--glass-border-hover);
    transform: translateY(-1px);
  }

