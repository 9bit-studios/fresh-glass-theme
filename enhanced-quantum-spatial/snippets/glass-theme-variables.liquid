    {% comment %} ===================================== {% endcomment %}

    /* Primary Button Styling - Glass Purple */
    --color-button-primary: var(--foundation-action-primary);
    --color-button-primary-hover: var(--foundation-action-hover);
    --color-button-primary-text: #ffffff;
    --color-button-primary-background: var(--foundation-action-primary);
    --color-button-primary-border: var(--foundation-action-primary);
    
    /* Secondary Button Styling - Glass Effect */
    --color-button-secondary-background: var(--glass-subtle);
    --color-button-secondary-text: var(--foundation-text-primary);
    --color-button-secondary-border: var(--glass-border);
    --color-button-secondary-hover-background: var(--glass-medium);
    --color-button-secondary-hover-border: var(--glass-border-hover);
    
    /* Input Styling - Glass Effect */
    --color-input-background: var(--glass-subtle);
    --color-input-text: var(--foundation-text-primary);
    --color-input-border: var(--glass-border);
    --color-input-focus-border: var(--foundation-accent-primary);
    --color-input-hover-background: var(--glass-medium);
    
    /* Card Styling - Glass Effect */
    --card-background: var(--glass-subtle);
    --card-border: var(--glass-border);
    --card-hover-background: var(--glass-medium);
    --card-shadow: 0 8px 32px rgba(0, 0, 0, 0.4), inset 0 1px 0 var(--glass-border);
    
    /* Navigation Styling - Glass Effect */
    --nav-background: var(--glass-surface);
    --nav-border: var(--glass-border);
    --nav-backdrop-filter: var(--glass-effect);
    --nav-link-background: var(--glass-subtle);
    --nav-link-hover-background: var(--glass-medium);
    --nav-link-active-background: var(--foundation-accent-primary);
    
    {% comment %} ===================================== {% endcomment %}
    {% comment %} GLASS COMPONENT VARIABLES {% endcomment %}
    {% comment %} ===================================== {% endcomment %}

    /* Glass Top Header - Full Width Configuration */
    --glass-top-header-background: var(--glass-surface);
    --glass-top-header-backdrop-filter: var(--glass-effect);
    --glass-top-header-height: 80px;
    --glass-top-header-max-width: var(--page-width-max);
    --glass-top-header-z-index: 1000;
    
    /* Glass Navigation Tabs */
    --glass-nav-tab-background: rgba(255, 255, 255, 0.05);
    --glass-nav-tab-border: 1px solid rgba(255, 255, 255, 0.1);
    --glass-nav-tab-border-radius: 22px;
    --glass-nav-tab-hover-background: var(--foundation-background-secondary);
    --glass-nav-tab-active-background: var(--foundation-accent-primary);
    --glass-nav-tab-active-border: var(--foundation-accent-primary);
    
    /* Glass Filter Bar */
    --glass-filter-background: var(--glass-subtle);
    --glass-filter-border: var(--glass-border);
    --glass-filter-backdrop-filter: blur(20px) saturate(120%);
    
    /* Glass Product Grid */
    --glass-product-card-background: var(--glass-subtle);
    --glass-product-card-border: var(--glass-border);
    --glass-product-card-hover-background: var(--glass-medium);
    --glass-product-card-border-radius: 16px;
    --glass-product-card-backdrop-filter: blur(16px) saturate(120%);
    
    {% comment %} ===================================== {% endcomment %}
    {% comment %} FOUNDATION VARIABLES INTEGRATION {% endcomment %}
    {% comment %} ===================================== {% endcomment %}

    /* Foundation Spacing System */
    --foundation-space-xs: 4px;
    --foundation-space-sm: 8px;
    --foundation-space-md: 16px;
    --foundation-space-lg: 24px;
    --foundation-space-xl: 32px;
    
    /* Foundation Border Radius */
    --foundation-radius-sm: 8px;
    --foundation-radius-md: 12px;
    --foundation-radius-lg: 16px;
    --foundation-radius-xl: 24px;
    --foundation-radius-full: 50%;
    
    /* Foundation Touch Targets */
    --foundation-touch-target: 44px;
    --foundation-input-height: 44px;
    
    /* Foundation Transitions */
    --foundation-transition: all 0.2s ease;
    
    /* Foundation Typography */
    --foundation-font-family: -apple-system, BlinkMacSystemFont, "SF Pro Display", "SF Pro Rounded", system-ui, sans-serif;
    
    {% comment %} ===================================== {% endcomment %}
    {% comment %} SHOPIFY COMPATIBILITY OVERRIDES {% endcomment %}
    {% comment %} ===================================== {% endcomment %}

    /* Override default Shopify variables with glass theme */
    --color-base-background-1: var(--foundation-background-primary);
    --color-base-background-2: var(--foundation-background-secondary);
    --color-base-text: var(--foundation-text-primary);
    --color-base-accent-1: var(--foundation-accent-primary);
    --color-base-accent-2: #5AC8FA;
    
    /* Button System Override */
    --buttons-radius: var(--foundation-radius-md);
    --buttons-border-width: 1px;
    --buttons-border-opacity: .7;
    
    /* Input System Override */
    --inputs-radius: var(--foundation-radius-md);
    --inputs-border-width: 1px;
    --inputs-border-opacity: 0.3;
    
    /* Card System Override */
    --card-corner-radius: var(--foundation-radius-lg);
    --card-border-width: 0px;
    --card-shadow-opacity: 0.4;
    --card-shadow-blur-radius: 32px;
    
    /* Page Width Override - Updated to 1800px */
    --page-width: 1800px;
    --page-width-margin: 32px;
    --page-width-max: 1800px;
    
    /* Override theme-styles-variables page widths */
    --narrow-page-width: 180rem; /* 2880px - larger than 1800px max-width */
    --normal-page-width: 180rem; /* 2880px */
    --wide-page-width: 180rem;   /* 2880px */
    
  /* Action Colors */
  --foundation-action-primary: #5D5AF6;
  --foundation-action-secondary: #512CF9;
  --foundation-action-tertiary: #613fe7;
  --foundation-action-success: #3DFF74;
  --foundation-action-primary-ar: #5AC8FA;

  /* Action Hover States */
  --foundation-action-hover-primary: #423DF5;
  --foundation-action-hover-secondary: #5040D9;
  --foundation-action-hover-tertiary: #5D5AF6;
  --foundation-action-hover-success: #30D46E;
  --foundation-action-primary-ar-hover: #007AFF;

  /* Semantic Colors */
  --color-primary: var(--foundation-action-primary-ar) #5AC8FA;
  --color-primary: var(--foundation-action-hover-primary-ar)hsl(199, 94.10%, 66.70%);
  --color-success: var(--foundation-action-success);
  --color-warning: #EC4899;
  --color-danger: #FF4F52;
  --foundation-success: var(--color-success) #3DFF74;

  --foundation-accent-primary: #5D5AF6;
  --foundation-action-primary: var(--foundation-accent-primary);
  --foundation-action-hover-primary: #423DF5;


  /* Border System */
  --foundation-border-primary: var(--color-border);
  --foundation-border-high-contrast: #ffffff;
}

