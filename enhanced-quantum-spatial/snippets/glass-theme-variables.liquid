  /* Map to common Shopify variable names */
  --color-base-text: var(--foundation-text-primary);
  --color-base-background-1: var(--foundation-background-primary);
  --color-base-background-2: var(--foundation-background-secondary);
  --color-base-solid-button-labels: var(--foundation-text-primary);
  --color-base-outline-button-labels: var(--foundation-text-secondary);
  --color-base-accent-1: var(--foundation-accent-primary);
  --color-base-accent-2: var(--foundation-action-secondary);

  /* Page width tokens */
  --page-width: var(--foundation-content-max-width);
  --page-width-margin: var(--foundation-container-padding);


    /* Glass Theme Color Mapping */
    --glass-surface: rgba(35, 16, 95, 0.71);
    --glass-medium: linear-gradient(135deg, rgba(45, 27, 105, 0.9) 0%, rgba(76, 29, 149, 0.7) 50%, rgba(45, 27, 105, 0.9) 100%);
    --glass-subtle: radial-gradient(circle at 30% 70%, rgba(99, 102, 241, 0.1) 0%, transparent 50%),
radial-gradient(circle at 70% 30%, rgba(236, 72, 153, 0.08) 0%, transparent 50%),
radial-gradient(circle at 90% 10%, rgba(139, 92, 246, 0.06) 0%, transparent 50%);
    --glass-deep: linear-gradient(135deg, rgba(0, 0, 0, 0.8) 0%, rgba(45, 27, 105, 0.6) 50%, rgba(0, 0, 0, 0.8) 100%);
    --glass-prominent: rgba(10, 6, 33, 0.8);
    --glass-border: rgba(93, 90, 246, 0.4);
    --glass-border-hover: rgba(93, 90, 246, 0.6);
    --glass-effect: blur(40px) saturate(200%) brightness(110%);
    
    /* Foundation Color System */
    --foundation-background-secondary: #0D0D15;
    --foundation-text-primary: #FFFFFF;
    --foundation-text-secondary: rgba(252, 253, 242, 0.85);
    --foundation-foreground-primary: var(--foundation-text-primary);
    --foundation-foreground-secondary: var(--foundation-text-secondary);

