  --foundation-gradient-quantum-depth: linear-gradient(90deg, #131A36 -0.02%, #331F4A 49.98%, #6A3093 99.98%);
  --foundation-gradient-spatial-simple: linear-gradient(90deg, #0A0621 -0.02%, #131A36 99.98%);
}


    {% comment %} ===================================== {% endcomment %}
    {% comment %} GLASS EFFECT UTILITIES {% endcomment %}
    {% comment %} ===================================== {% endcomment %}

    /* Glass Shadow System */
    --foundation-shadow-primary: 0 4px 12px rgba(93, 90, 246, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);
    --foundation-shadow-secondary: 0 8px 32px rgba(0, 0, 0, 0.4), inset 0 1px 0 var(--glass-border);
    --foundation-shadow-elevated: 0 16px 48px rgba(0, 0, 0, 0.5), inset 0 1px 0 var(--glass-border);
    
    /* Glass Backdrop Filters */
    --foundation-backdrop-filter: blur(40px) saturate(200%) brightness(110%);
    --foundation-backdrop-filter-subtle: blur(8px) saturate(120%);
    --foundation-backdrop-filter-medium: blur(16px) saturate(125%);
    --foundation-backdrop-filter-prominent: blur(24px) saturate(130%);
    
    {% comment %} ===================================== {% endcomment %}
    {% comment %} RESPONSIVE GLASS VARIABLES {% endcomment %}
    {% comment %} ===================================== {% endcomment %}

    /* Mobile Glass Adjustments */
    @media (max-width: 768px) {
      --glass-top-header-height: 50px;
      --glass-nav-tab-border-radius: 20px;
      --glass-product-card-border-radius: 12px;
      --foundation-space-lg: 16px;
      --foundation-space-xl: 24px;
      --page-width-margin: 8px; /* Reduce mobile margins */
    }
    
    /* Mobile Content Width Overrides */
    @media (max-width: 768px) {
      .main-content,
      #MainContent,
      .content-for-layout,
      .page-width,
      .container,
      .content-container {
        width: 100% !important;
        max-width: 100% !important;
        padding-left: 0.5rem !important;
        padding-right: 0.5rem !important;
        margin-left: 0 !important;
        margin-right: 0 !important;
      }
    }
    
    /* Desktop Glass Enhancements */
    @media (min-width: 1024px) {
      --glass-effect: blur(40px) saturate(200%) brightness(110%);
      --foundation-backdrop-filter: blur(40px) saturate(200%) brightness(110%);
    }
  }

